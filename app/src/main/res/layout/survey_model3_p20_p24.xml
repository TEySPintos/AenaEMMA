<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:visibility="gone"
    style="@style/SurveyQuestionsBox">-->


    //P20
    <LinearLayout
        android:id="@+id/survey_layout_M3_P20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/SurveySingleQuestion">

        <TextView
            android:id="@+id/survey_text_M3_P20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_M3_P20"
            style="@style/SuveyQuestionTitle"/>
        <Spinner
            android:id="@+id/survey_spinner_M3_P20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/SurveyQuestionEdit"/>
    </LinearLayout>
    //End of P20





    //P21
    <LinearLayout
        android:id="@+id/survey_layout_M3_P21"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/SurveySingleQuestion">
        <TextView
            android:id="@+id/survey_text_M3_P21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_M3_P21"
            style="@style/SuveyQuestionTitle"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/survey_radiogroup_M3_P21"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/survey_radio_M3_P21_option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_radio_M3_P21_option1"/>
                <RadioButton
                    android:id="@+id/survey_radio_M3_P21_option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_radio_M3_P21_option2"/>
            </RadioGroup>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/survey_text_M3_P21a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_text_M3_P21a"
                    style="@style/SuveyQuestionTitle"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/survey_text_M3_P21b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_text_M3_P21b"
                    style="@style/SuveyQuestionTitle"
                    android:visibility="invisible"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/survey_layout_M3_P21nums"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_radio_M3_P21b_option2"
                    style="@style/SurveySubQuestion"/>
                <EditText
                    android:id="@+id/survey_edit_M3_P21b"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/SurveyQuestionEdit"
                    android:inputType="number"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/survey_text_M3_P21_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_M3_P21_error"
            android:textColor="@color/aenaRed"
            style="@style/SuveyQuestionTitle"
            android:visibility="gone"/>
    </LinearLayout>
    //End of P21




    //P22
    <LinearLayout
        android:id="@+id/survey_layout_M3_P22"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/SurveySingleQuestion">
        <TextView
            android:id="@+id/survey_text_M3_P22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_M3_P22"
            style="@style/SuveyQuestionTitle"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/survey_radiogroup_M3_P22"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/survey_radio_M3_P22_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_radio_M3_P22_option1"/>
                <RadioButton
                    android:id="@+id/survey_radio_M3_P22_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_radio_M3_P22_option3"/>


            </RadioGroup>
            <EditText
                android:id="@+id/survey_edit_M3_P22_numPersonas"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/SurveyQuestionEdit"
                android:inputType="number"
                android:layout_gravity="bottom"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    //End of P22





    //P23
    <LinearLayout
        android:id="@+id/survey_layout_M3_P23"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/SurveySingleQuestion">

        <TextView
            android:id="@+id/survey_text_M3_P23"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_M3_P23"
            style="@style/SuveyQuestionTitle"/>
        <EditText
            android:id="@+id/survey_edit_M3_P23"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/SurveyQuestionEdit"
            android:inputType="number"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    //End of P23




    //P24
    <LinearLayout
        android:id="@+id/survey_layout_M3_P24"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/SurveySingleQuestion">
        <TextView
            android:id="@+id/survey_text_M3_P24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_M3_P24"
            style="@style/SuveyQuestionTitle"/>
        <RadioGroup
            android:id="@+id/survey_radiogroup_M3_P24"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/survey_radio_M3_P24_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_M3_P24_option1"/>
            <RadioButton
                android:id="@+id/survey_radio_M3_P24_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_M3_P24_option2"/>
            <RadioButton
                android:id="@+id/survey_radio_M3_P24_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_M3_P24_option3"/>
            <RadioButton
                android:id="@+id/survey_radio_M3_P24_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_M3_P24_option4"/>
            <RadioButton
                android:id="@+id/survey_radio_M3_P24_option5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_M3_P24_option5"/>
        </RadioGroup>
    </LinearLayout>
    //End of P24









</LinearLayout>