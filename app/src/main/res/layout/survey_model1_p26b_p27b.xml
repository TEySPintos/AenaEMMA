<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/survey_block_P26B_P27B"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--style="@style/SurveyQuestionsBox">-->

    //P26B
    <LinearLayout
        android:id="@+id/survey_layout_P26B"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/SurveySingleQuestion">
        <TextView
            android:id="@+id/survey_text_P26B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_P26B"
            style="@style/SuveyQuestionTitle"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/survey_radiogroup_P26B"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/survey_radio_P26B_option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_radio_P26B_option1"/>
                <RadioButton
                    android:id="@+id/survey_radio_P26B_option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_radio_P26B_option2"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/survey_layout_P26Ba"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/survey_text_P26Ba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_text_P26Ba"
                    style="@style/SuveyQuestionTitle"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/survey_text_P26Bb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_text_P26Bb"
                    style="@style/SuveyQuestionTitle"
                    android:visibility="visible"/>
                <RadioGroup
                    android:id="@+id/survey_radiogroup_P26Bb"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/survey_radio_P26Bb_option1"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/survey_radio_P26Bb_option1"/>

                    <RadioButton
                        android:id="@+id/survey_radio_P26Bb_option2"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/survey_radio_P26Bb_option2"/>

                    <RadioButton
                        android:id="@+id/survey_radio_P26Bb_option3"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/survey_radio_P26Bb_option3"/>

                    <RadioButton
                        android:id="@+id/survey_radio_P26Bb_option4"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/survey_radio_P26Bb_option4"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content" />
                </RadioGroup>
                <EditText
                    android:id="@+id/survey_edit_P26_otros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/survey_radiogroup_P26Bb"
                    android:visibility="gone"
                    style="@style/SurveyQuestionEdit"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/survey_layout_P26Bnums"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_text_P26Bb_veces"/>
                <EditText
                    android:id="@+id/survey_edit_P26Bb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/SurveyQuestionEdit"
                    android:inputType="number"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/survey_text_P15_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_P15_error"
            android:textColor="@color/aenaRed"
            style="@style/SuveyQuestionTitle"
            android:visibility="gone"/>
    </LinearLayout>
    //End of P26B



    //P27B
    <LinearLayout
        android:id="@+id/survey_layout_P27B"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/SurveySingleQuestion" >
        <RadioGroup
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/survey_text_P27B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_text_P27B"
                style="@style/SuveyQuestionTitle" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/survey_spinner_P27B"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/SurveyQuestionEdit" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/survey_layout_P27B_others"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/survey_radio_P27_option11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/survey_radio_P27_option11"/>
                <EditText
                    android:id="@+id/survey_edit_P27B_especificar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/SurveyQuestionEdit" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
    //End of P27


    //P28
    <LinearLayout
        android:id="@+id/survey_layout_P28"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/SurveySingleQuestion" >
        <TextView
            android:id="@+id/survey_text_P28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/survey_text_P28"
            style="@style/SuveyQuestionTitle" />
        <RadioGroup
            android:id="@+id/survey_radiogroup_P28"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/survey_radio_P28_option1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_P28_option1"/>
            <RadioButton
                android:id="@+id/survey_radio_P28_option2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_P28_option2"/>
            <RadioButton
                android:id="@+id/survey_radio_P28_option3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/survey_radio_P28_option3"/>
        </RadioGroup>
    </LinearLayout>
    //End of P28

</LinearLayout>